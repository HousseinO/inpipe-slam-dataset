<?xml version="1.0"?>
<robot name="inpipe_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Base -->
  <link name="base_link">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.04" iyy="0.04" izz="0.04" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry><cylinder radius="0.07" length="0.25"/></geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.07" length="0.25"/></geometry>
    </collision>
  </link>

  <!-- Camera -->
  <link name="camera_link">
    <inertial>
      <mass value="0.25"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0002" iyy="0.0002" izz="0.0002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry><box size="0.04 0.04 0.02"/></geometry>
      <origin xyz="0.10 0 0.03" rpy="0 0 0"/>
      <material name="black"><color rgba="0.1 0.1 0.1 1.0"/></material>
    </visual>
  </link>

  <joint name="base_to_camera" type="fixed">
    <origin xyz="0.10 0 0.03" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera_link"/>
  </joint>

  <!-- Lidar -->
  <link name="lidar_link">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0002" iyy="0.0002" izz="0.0002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry><cylinder radius="0.025" length="0.02"/></geometry>
      <origin xyz="0.09 0 0.08" rpy="0 0 0"/>
      <material name="blue"><color rgba="0.2 0.2 0.8 1.0"/></material>
    </visual>
  </link>

  <joint name="base_to_lidar" type="fixed">
    <origin xyz="0.09 0 0.08" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_link"/>
  </joint>

  <!-- Gazebo: camera sensor -->
  <gazebo reference="camera_link">
    <sensor name="front_camera" type="camera">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <camera name="rgb">
        <horizontal_fov>1.047</horizontal_fov> <!-- 60 deg -->
        <image>
          <width>640</width><height>480</height><format>R8G8B8</format>
        </image>
        <clip><near>0.05</near><far>20.0</far></clip>
      </camera>
      <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
        <ros>
          <namespace>/inpipe_bot</namespace>
          <remapping>image:=/camera/image_raw</remapping>
          <remapping>camera_info:=/camera/camera_info</remapping>
        </ros>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Gazebo: lidar sensor (2D, planar) -->
  <gazebo reference="lidar_link">
    <sensor name="front_laser" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <always_on>true</always_on>
      <update_rate>20</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.5708</min_angle> <!-- -90 deg -->
            <max_angle>1.5708</max_angle>  <!-- +90 deg -->
          </horizontal>
        </scan>
        <range><min>0.05</min><max>15.0</max></range>
        <noise><type>gaussian</type><mean>0.0</mean><stddev>0.01</stddev></noise>
      </ray>
      <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/inpipe_bot</namespace>
          <remapping>scan:=/scan</remapping>
        </ros>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Publish TF -->
  <gazebo>
    <plugin name="tf_publisher" filename="libgazebo_ros_state.so">
      <ros><namespace>/inpipe_bot</namespace></ros>
      <publish_tf>true</publish_tf>
      <update_rate>50</update_rate>
    </plugin>
  </gazebo>
</robot>

